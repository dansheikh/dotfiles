function git_branch {
  branch=$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/\1/')
  if [ -n "${branch// }" ]; then
    printf " \xf0\x9f\x93\xa6 \e[3m${branch}\e[0m"
  fi
}

function user_level {
 if [ "$EUID" -eq 0 ]; then
    printf "\xe2\x9c\xa8"
 else
    printf "\xf0\x9f\x9a\x80"
 fi
}

function exec_stat {
  local job_status=$?
  success='\e[38;5;48m\u276F\e[m\e[38;5;46m\u276F\e[m\e[38;5;40m\u276F\e[m'
  failure='\e[38;5;220m\u276F\e[m\e[38;5;214m\u276F\e[m\e[38;5;196m\u276F\e[m'
  
  if [ $job_status -eq 0 ]; then
    printf "${success}"
  else
    printf "${failure}"
  fi

  return $job_status
}

PS1=$'\[\e[0;38;5;48m\]┌──[\\t]\[\e[0m\] $(exec_stat) \[\e[0;38;5;49m\]\\u\[\e[0m\]@\[\e[0;38;5;49m\]\\h\[\e[0m\]:\[\e[0;38;5;50m\]\\w\[\e[0m\]$(git_branch)\\n\[\e[0;38;5;48m\]└──\[\e[0m\]$(user_level) '
