# Utility aliases
alias cp='cp -v'
alias hr='history | rg'
alias la='ls -Glart'
alias lh='ls -Glh'
alias ll='ls -Gl'
alias ls='ls -G'
alias mkdir='mkdir -pv'
alias mv='mv -v'
alias please='sudo $(fc -ln -1)'
alias rm='rm -v'

# Application aliases
alias nwe='emacs -nw'
alias sbcl="rlwrap sbcl"
alias tmux='tmux -2'
alias tf='terraform'

# Redirection aliases
alias -g NIL="> /dev/null 2>&1"
