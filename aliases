alias ll='ls -lG'
alias ls='ls -G'
alias la='ls -lartG'
alias lh='ls -lhG'

alias mkdir='mkdir -pv'
alias mv='mv -v'
alias rm='rm -v'
alias cp='cp -v'

alias ha='history | ack'

# Redirect stdout and stderr to /dev/null
alias -g NIL="> /dev/null 2>&1"

# Docker aliases
alias docker-vol-clean="docker volume rm $(docker volume ls | awk 'NR > 1 {print $2}')"
alias docker-img-clean="docker rmi $(docker images -a -q)"

function docker-vol-rm {
  docker volume ls | grep "$1" | awk '{print $3}' | xargs docker volume rm
}

function docker-img-rm {
  docker images -a | grep "$1" | awk '{print $3}' | xargs docker rmi
}
